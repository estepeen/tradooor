{
  "name": "@solbot/backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "pnpm --filter @solbot/db db:generate",
    "db:migrate": "pnpm --filter @solbot/db db:migrate",
    "db:studio": "pnpm --filter @solbot/db db:studio",
    "calculate-metrics": "tsx src/workers/calculate-metrics.ts",
    "metrics:cron": "tsx src/workers/metrics-cron.ts",
    "collector:start": "tsx src/workers/solana-collector.ts start",
    "collector:backfill": "tsx src/workers/solana-collector.ts backfill"
  },
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "@solbot/db": "workspace:*",
    "@solbot/shared": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
