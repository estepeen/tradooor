{
  "name": "solbot",
  "version": "1.0.0",
  "private": true,
  "description": "Smart wallet tracking and analytics platform for Solana",
  "scripts": {
    "dev": "pnpm --filter backend dev & pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm -r build",
    "db:generate": "pnpm --filter @solbot/db db:generate",
    "db:migrate": "pnpm --filter @solbot/db db:migrate",
    "db:studio": "pnpm --filter @solbot/db db:studio",
    "clear-cache": "bash clear-cache.sh"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
